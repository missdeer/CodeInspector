cmake_minimum_required(VERSION 3.15)
project(scintillua VERSION 1.0.0)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

add_compile_definitions(SCINTILLA_QT=1
        SCI_LEXER=1
        _CRT_SECURE_NO_DEPRECATE=1
        SCI_STATIC_LINK=1
        NO_DLL=1
        EXPORT_IMPORT_API=
        )

file(GLOB
        scintillua_src
        ./*.cxx
)
        
add_library(scintillua STATIC ${scintillua_src})

target_link_libraries(scintillua PRIVATE 
        lua scintilla lexilla
        )

target_include_directories (scintillua PUBLIC 
    ${CMAKE_CURRENT_BINARY_DIR} 
    ${CMAKE_CURRENT_SOURCE_DIR}
    )